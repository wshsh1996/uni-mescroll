
image{width: 100%;vertical-align: bottom;height:auto}
.header{z-index: 9900;position: fixed;top: --window-top;left: 0;height: 100rpx;background: #fff;}
.footer{z-index: 9900;position: fixed;bottom: 0;left: 0;height: 100rpx;background: white;}
.download-tip{
	z-index: 900;
	position: fixed;
	top: calc(0px + 20rpx);
	left: 0;
	width: 100%;
	height: 60rpx;
	line-height: 60rpx;
	font-size: 24rpx;
	text-align: center;
	background-color: rgba(255,130,1,.7);
	color: white;
	transition: top 300ms;
}
/*展示上拉加载的数据列表*/
.news-li{
	padding: 32rpx;
	border-bottom: 1rpx solid #eee;
}
.news-li .new-content{
	font-size: 28rpx;
	margin-top: 10rpx;
	margin-left: 20rpx;
	color: #666;
}

